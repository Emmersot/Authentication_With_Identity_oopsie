@{
  Layout = "_Layout";
}

@model PierreSweets.Models.Treat

<div class="jumbotron text-center">
  <h2>Add a new treat</h2>
</div>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new { @required="required" })
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Ingredients)
  @Html.TextBoxFor(model => model.Ingredients)

  @Html.LabelFor(model => model.Rating)
  @Html.TextBoxFor(model => model.Rating, new { type="range" , min = 1, max = 10, value = 5, step = 1})

  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Add new flavor" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all flavors", "Index")</p>